        function changeRequestType(newRequestType) {
            selectedRequestType = newRequestType;
            loadData();
        }

        function changeSearchString(newSeachString) {
            searchString = newSeachString;
            loadData();
        }

        function loadData() {
            switch (selectedStatus) {
                case 1:
                    $.ajax({
                        url: "/admin/New",
                        type: "POST",
                        data: {
                            status:selectedStatus,
                            region:selectedRegion,
                            requestType:selectedRequestType,
                            searchString:searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("New");
                        },
                        error: function () {
                            $("#tableContent").html('No Data Found');
                        }
                    })
                    newState();
                    break;
                case 2:
                    $.ajax({
                        url: "/admin/Pending",
                        type: "POST",
                        data: {
                            status: selectedStatus,
                            region: selectedRegion,
                            requestType: selectedRequestType,
                            searchString: searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("Pending");
                        },
                        error: function () {
                            $("tableContent").html('No Data Found');
                        }
                    })
                    pendingState();
                    break;
                case 3:
                    $.ajax({
                        url: "/admin/Active",
                        type: "POST",
                        data: {
                            status: selectedStatus,
                            region: selectedRegion,
                            requestType: selectedRequestType,
                            searchString: searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("Active");
                        },
                        error: function () {
                            $("#tableContent").html('No Data Found');
                        }
                    })
                    activeState();
                    break;
                case 4:
                    $.ajax({
                        url: "/admin/Conclude",
                        type: "POST",
                        data: {
                            status: selectedStatus,
                            region: selectedRegion,
                            requestType: selectedRequestType,
                            searchString: searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("Conclude");
                        },
                        error: function () {
                            $("tableContent").html('No Data Found');
                        }
                    })
                    concludeState();
                    break;
                case 5:
                    $.ajax({
                        url: "/admin/Close",
                        type: "POST",
                        data: {
                            status: selectedStatus,
                            region: selectedRegion,
                            requestType: selectedRequestType,
                            searchString: searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("Close");
                        },
                        error: function () {
                            $("#tableContent").html('No Data Found');
                        }
                    })
                    closedState();
                    break;
                case 6:
                    $.ajax({
                        url: "/admin/Unpaid",
                        type: "POST",
                        data: {
                            status: selectedStatus,
                            region: selectedRegion,
                            requestType: selectedRequestType,
                            searchString: searchString
                        },
                        success: function (table_data) {
                            $("#tableContent").html(table_data);
                            $("#type").html("Unpaid");
                        },
                        error: function () {
                            $("#tableContent").html('No Data Found');
                        }
                    })
                    unpaidState();
                    break;
            }
        }

        $(document).ready(function () {
            loadData();
        })

        function cancelModal(reqId,firstname) {
           debugger
           document.getElementById("reqId").value = reqId;
           document.getElementById("firstName").innerHTML = firstname;
           $("dashboardModal").show();
        }

        function assignModal(reqId) {
            debugger
            document.getElementById("requestId_Assign").value = reqId;
            $("assignCase").show();
        }
        function blockModal(reqId,firstname,email,phone) {
            debugger
            document.getElementById("requestIdForBlock").value = reqId;
            document.getElementById("firstNameForBlockCase").innerHTML = firstname;
            document.getElementById("emailForBlock").value = email;
            document.getElementById("phoneForBlock").value = phone;
            $("blockModal").show();
        }

        function cancelData() {
            debugger
            var reason = document.getElementById("SelectData").value;
            var notes = document.getElementById("notes").value;
            var reqid = document.getElementById("reqId").value;

            $.ajax({
                url: '/admin/CancelCase',
                type: 'POST',
                data: {
                    reqId: reqid,
                    reason: reason,
                    notes: notes,
                },
                success: function (response) {
                    if (response.success) {
                        alert("Success");
                        window.location.reload();
                    }
                },
                error: function () {
                    alert('Error');
                }
            })
        }

        function blockData() {
            debugger
            var reason = document.getElementById("reasonForBlock").value;
            var reqid = document.getElementById("requestIdForBlock").value;
            var email = document.getElementById("emailForBlock").value;
            var phone = document.getElementById("phoneForBlock").value;

            $.ajax({
                url: '/admin/BlockCase',
                type: 'POST',
                data: {
                    reqId: reqid,
                    reason: reason,
                    email:email,
                    phone:phone,
                },
                success: function (response) {
                    if (response.success) {
                        alert("Success");
                        window.location.reload();
                    }
                },
                error: function () {
                    alert('Error');
                }
            })
        }

