@model HalloDocApp.Entities.ViewModels.Login;

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Login Page";
} 

<div class="row">
     <div class="d-none d-md-block col-md-6">
         <img class="admin_login_img" src="~/images/11116016_415.jpg">
     </div>
     <div class="col-md-6 d-flex flex-column justify-content-between align-items-center">

         <img class="admin-login-logo my-3" src="~/images/hallo-doc.png">
         <div class="main-div">
             <h3>Login to your Account</h3>

             <form asp-action="Dashboard" asp-controller="Admin">
                 <div class="form-floating  my-3">
                     <input type="email"  asp-for="email" id="emailfield" class="form-control bg-transparent border-secondary">
                     <label for="emailfield">Username</label>
                     <i class="bi bi-person-circle user-icon"></i>
                     <span asp-validation-for="email" class="text-danger"></span>
                 </div>
                 <div class="form-floating  my-3">
                     <input asp-for="password" type="password" id="passwordfield"
                            class="form-control bg-transparent border-secondary" placeholder="">
                     <label for="passwordfield">Password</label>
                     <i class="bi bi-eye-slash pwd-icon" id="togglePassword"></i>
                    <span asp-validation-for="password" class="text-danger"></span>
                 </div>
                 <div>
                     <button type="submit" class="btn btn-primary  log-in-btn">Log In</button>
                 </div>
                 <div class="m-3">
                     <a asp-action="AdminForgotPassword" asp-controller="Admin" class="forgot-pwd">Forgot Password</a>
                 </div>
             </form>

         </div>
         <div>
             <h4>Terms & Conditions | Privacy Policy</h4>
         </div>


     </div>
 </div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}